@model Desafio.S2IT.Web.Models.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

@section CssImports {
    <link href="~/css/page-center.css" type="text/css" rel="stylesheet">
}

<div id="login-page" class="row">
    <div class="col s12 z-depth-4 card-panel">
        <form class="login-form" asp-action="Index" asp-controller="Login">
            <div class="row">
                <div class="input-field col s12 center">
                    <img src="../../images/logo/login-logo.png" alt="" class="circle responsive-img valign profile-image-login">
                    <p class="center login-form-text">Emprestimo Jogos - Login</p>
                </div>
            </div>
            <div class="row margin">
                <div class="input-field col s12">
                    <i class="material-icons prefix pt-5">person_outline</i>
                    <input asp-for="Usuario" type="text">
                    <label asp-for="Usuario" class="center-align">Usuário</label>
                </div>
            </div>
            <div class="row margin">
                <div class="input-field col s12">
                    <i class="material-icons prefix pt-5">lock_outline</i>
                    <input asp-for="Senha" type="password">
                    <label asp-for="Senha">Senha</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <button id="Login" class="btn waves-effect waves-light col s12">Login</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script>
        $("#Login").click(function (event) {
            if ($("#Usuario").val() == "") {
                Materialize.toast('Informe um usuário!', 4000);
                event.preventDefault();
                return;
            }

            if ($("#Senha").val() == "") {
                Materialize.toast('Informe uma senha!', 4000);
                event.preventDefault();
                return;
            }
        })
    </script>

    @if (Model != null && Model.LoginIncorreto)
    {
        <script>
            Materialize.toast('Usuário ou Senha incorretos!', 4000);
        </script>
    }
}

